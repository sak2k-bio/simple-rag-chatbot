# Embedding Provider Configuration
# Choose 'google' for cloud-based embeddings or 'ollama' for local embeddings
EMBEDDING_PROVIDER=google

# Google AI API Configuration (required when EMBEDDING_PROVIDER=google)
GOOGLE_API_KEY=your_google_api_key_here

# Ollama Configuration (required when EMBEDDING_PROVIDER=ollama)
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=nomic-embed-text

# Qdrant Configuration
QDRANT_URL=http://localhost:6333
# For local development, leave QDRANT_API_KEY empty to avoid "unsecure connection" warning
# QDRANT_API_KEY=your_qdrant_api_key_here
QDRANT_COLLECTION=pulmo_fishman

# Processing Configuration
# Optimized for GPU-accelerated Ollama (12GB VRAM) - Large Scale Processing
BULK_CONCURRENCY=12
BULK_EMBED_BATCH=50
BULK_UPSERT_BATCH=200
OPTIMAL_CHUNK_SIZE=1000
OPTIMAL_CHUNK_OVERLAP=200

# GPU Optimization (for Ollama)
OLLAMA_GPU_LAYERS=20
OLLAMA_NUM_CTX=2048
OLLAMA_NUM_BATCH=512

# Web UI Configuration
PORT=3001
UPLOAD_DIR=/app/uploads
DATA_DIR=/app/data
MANIFEST_DIR=/app/manifests
